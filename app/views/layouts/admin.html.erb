<!DOCTYPE html>
<html>
  <head>
    <title>Pioneers</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container-fluid">
      <div class="row">
        <%= render "common/navbar" %>
        <%= render "common/flashes" %>
      </div>
      <div class="row">
        <div class="col-sm-3 col-md-2 sidebar">
          <ul class="nav nav-sidebar">
            <li class="<%= params[:controller] == "admin/startups" ? 'active' : '' %>"><a href="<%= admin_startups_path %>">创业公司</a></li>
            <li class="<%= params[:controller] == "admin/jobs" ? 'active' : '' %>"><a href="<%= admin_jobs_path %>">职位信息</a></li>
            <li class="<%= params[:controller] == "admin/users" ? 'active' : '' %>"><a href="<%= admin_users_path %>">用户信息</a></li>
          </ul>
        </div>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
