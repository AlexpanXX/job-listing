<%= simple_form_for [:admin, @job] do |f| %>
  <div class="form-inputs">
    <%= f.input :title, input_html: { class: "form-control" } %>
    <%= f.input :description, input_html: { class: "form-control"} %>
    <%= f.input :wage_lower_bound, input_html: { class: "form-control"} %>
    <%= f.input :wage_upper_bound, input_html: { class: "form-control"} %>
    <%= f.input :contact_email, input_html: { class: "form-control"} %>
  </div>
  <div class="form-actions">
    <%= f.submit "Submit", data: { disable_with: "Submiting..." }, class: "btn btn-primary" %>
  </div>
<% end %>
