<div class="col-md-12">
  <%= link_to("Add a Job", new_admin_job_path, class: "btn btn-primary pull-right") %>
  <table class="table">
    <thead>
      <tr>
        <th>职位名称</th>
        <th>薪资下限</th>
        <th>薪资上限</th>
        <th>操作</th>
        <th>发布时间</th>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td>
            <%= render_job_states(job) %>
            <%= job.title %>
          </td>
          <td><%= job.wage_lower_bound %></td>
          <td><%= job.wage_upper_bound %></td>
          <td>
            <%= link_to("Edit", edit_admin_job_path(job), class: "btn btn-primary btn-sm") %>
            <%= link_to("Delete", admin_job_path(job), class: "btn btn-default btn-sm", method: :delete, data: {confirm: "Are you sure?"}) %>
            <% if job.is_hidden %>
              <%= link_to("Publish", publish_admin_job_path(job), method: :post, class: "btn btn-default btn-sm", style: "color: green") %>
            <% else %>
              <%= link_to("Hide", hide_admin_job_path(job), method: :post, class: "btn btn-default btn-sm", style: "color: red") %>
            <% end %>
          </td>
          <td><%= job.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="text-center">
    <%= will_paginate @jobs %>
  </div>
</div>
