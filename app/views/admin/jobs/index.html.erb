<div class="col-md-12">
  <h2>职位信息</h2>
  <hr/>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>职位名称</th>
        <th>公司名称</th>
        <th>收到简历</th>
        <th>薪资下限</th>
        <th>薪资上限</th>
        <th>管理</th>
        <th>发布时间</th>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td>
            <%= render_job_status(job) %>
            <%= link_to(job.title, admin_job_path(job)) %>
          </td>
          <td><%= link_to(job.startup.name, admin_startup_path(job.startup)) %></td>
          <td><%= link_to(job.resumes.count, admin_job_resumes_path(job)) %></td>
          <td><%= job.wage_lower_bound %></td>
          <td><%= job.wage_upper_bound %></td>
          <td>
            <%= link_to("Edit", edit_admin_job_path(job), class: "btn btn-default btn-sm") %>
            <%= link_to("Delete", admin_job_path(job), class: "btn btn-danger btn-sm", method: :delete, data: {confirm: "Are you sure?"}) %>
            <% if job.is_hidden %>
              <%= link_to("Publish", publish_admin_job_path(job), method: :post, class: "btn btn-success btn-sm") %>
            <% else %>
              <%= link_to("Hide", hide_admin_job_path(job), method: :post, class: "btn btn-warning btn-sm") %>
            <% end %>
          </td>
          <td><%= job.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="text-center">
    <%= will_paginate @jobs, renderer: BootstrapPagination::Rails %>
  </div>
</div>
