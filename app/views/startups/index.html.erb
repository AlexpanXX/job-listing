<div class="col-md-12">
  <h2>创业公司</h2>
  <div class="container-fluid">
    <div class="row">
      <ul class="dropdown pull-right">
        <a class="dropdown-toggle btn btn-default" data-toggle="dropdown" href="#">
          排序<b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
          <li><%= link_to("最多浏览", startups_path(order: "by_view_count")) %></li>
          <li><%= link_to("最多收藏", startups_path(order: "by_favorite_count")) %></li>
          <li><%= link_to("最新发布", startups_path) %></li>
        </ul>
      </ul>
    </div>
  </div>
  <hr/>

  <div class="container-fluid">
    <div class="row">
      <%= render partial:"startup", collection: @startups, as: :startup %>
    </div>
  </div>
  <div class="text-center">
    <%= will_paginate @startups, renderer: BootstrapPagination::Rails %>
  </div>
</div>
